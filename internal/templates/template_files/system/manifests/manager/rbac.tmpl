apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: devenv-manager
rules:
- apiGroups: ["authentication.k8s.io"]
  resources: ["tokenreviews"]
  verbs: ["create"]
- apiGroups: [""]
  resources: ["pods"]
  verbs: ["list", "get", "delete"]
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: devenv-manager
subjects:
- kind: ServiceAccount
  name: devenv-manager
  namespace: {{.Namespace}}
roleRef:
  kind: ClusterRole
  name: devenv-manager
  apiGroup: rbac.authorization.k8s.io
