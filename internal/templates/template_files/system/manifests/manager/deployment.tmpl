apiVersion: apps/v1
kind: Deployment
metadata:
  name: devenv-manager
  namespace: {{.Namespace}}
  labels:
    app: devenv-manager
spec:
  replicas: 1
  selector:
    matchLabels:
      app: devenv-manager
  template:
    metadata:
      labels:
        app: devenv-manager
    spec:
      serviceAccountName: devenv-manager
      securityContext:
        runAsNonRoot: true
        runAsUser: 1000
        fsGroup: 1000
        seccompProfile:
          type: RuntimeDefault
      containers:
      - name: manager
        image: nauticalab/devenv-manager:latest
        imagePullPolicy: IfNotPresent
        ports:
        - containerPort: {{.ManagerPort}}
          name: http
        args:
        - serve
        - --port={{.ManagerPort}}
        - --audience=devenv-manager
        - --tls-cert=/certs/tls.crt
        - --tls-key=/certs/tls.key
        securityContext:
          allowPrivilegeEscalation: false
          readOnlyRootFilesystem: true
          runAsNonRoot: true
          runAsUser: 1000
          capabilities:
            drop:
              - ALL
        volumeMounts:
        - name: tmp
          mountPath: /tmp
        - name: tls-certs
          mountPath: /certs
          readOnly: true
        livenessProbe:
          httpGet:
            path: /api/v1/health
            port: http
          initialDelaySeconds: 5
          periodSeconds: 10
        readinessProbe:
          httpGet:
            path: /api/v1/health
            port: http
          initialDelaySeconds: 2
          periodSeconds: 5
      volumes:
      - name: tmp
        emptyDir: {}
      - name: tls-certs
        secret:
          secretName: devenv-manager-tls
          optional: true

